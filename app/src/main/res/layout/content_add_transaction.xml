<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wallet.mycoin.AddTransactionActivity"
    tools:showIn="@layout/activity_add_transaction">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/homepage_margin_left">

        <Switch
            android:id="@+id/transaction_type"
            android:layout_width="@dimen/transaction_switch_width"
            android:layout_height="@dimen/transaction_switch_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Buy"
            android:focusable="true"
            android:textIsSelectable="true"
            android:textSize="@dimen/transaction_page_font" />

        <LinearLayout
            android:id="@+id/spinnerLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@id/transaction_type"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Coin Type"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <Spinner
                android:id="@+id/coinSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:tooltipText="Select"
                android:entries="@array/context_view"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_transaction_field_height"
            android:orientation="horizontal"
            android:layout_below="@+id/spinnerLayout">
            <EditText
                android:id="@+id/dateTxtView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColorHint="@color/colorPrimary"
                android:hint="Date"
                android:focusable="false"
                android:editable="false"
                android:text=""/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/volumeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_transaction_field_height"
            android:orientation="horizontal"
            android:layout_below="@+id/dateLayout">

            <EditText
                android:id="@+id/volumeEtx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:hint="Volume"
                android:selectAllOnFocus="true"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/priceUnitLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_transaction_field_height"
            android:orientation="horizontal"
            android:layout_below="@+id/volumeLayout">
            <EditText
                android:id="@+id/priceUnitEtx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:hint="Unit Price"
                android:selectAllOnFocus="true"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:textIsSelectable="true"
            android:visibility="invisible"
            android:layout_below="@+id/priceUnitLayout"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_transaction_field_height"
            android:orientation="horizontal"
            android:layout_below="@+id/priceUnitLayout">
            <EditText
                android:id="@+id/priceEtx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:focusable="false"
                android:editable="false"
                android:hint="Price"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/feesLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_transaction_field_height"
            android:orientation="horizontal"
            android:layout_below="@+id/priceLayout">


            <EditText
                android:id="@+id/feesEtx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:hint="Fees"
                android:focusable="false"
                android:editable="false"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/totalLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_transaction_field_height"
            android:orientation="horizontal"
            android:focusable="true"
            android:layout_below="@+id/feesLayout">

            <EditText
                android:id="@+id/totalTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:hint="Total"
                android:focusable="false"
                android:textIsSelectable="true"
                android:editable="false"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/transaction_save"
            android:layout_width="@dimen/save_button_width"
            android:focusable="true"
            android:layout_height="@dimen/save_button_height"
            android:layout_marginTop="@dimen/save_button_topMargin"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:layout_below="@+id/totalLayout"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
