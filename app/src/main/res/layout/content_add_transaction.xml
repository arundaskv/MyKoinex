<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wallet.mycoin.AddTransactionActivity"
    tools:showIn="@layout/activity_add_transaction">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/homepage_margin_left">

        <Switch
            android:id="@+id/transaction_type"
            android:layout_width="@dimen/transaction_switch_width"
            android:layout_height="@dimen/transaction_switch_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/homepage_margin_left"
            android:text="Buy"
            android:focusable="true"
            android:textIsSelectable="true"
            android:textSize="@dimen/transaction_page_font" />

        <LinearLayout
            android:id="@+id/spinnerLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@id/transaction_type"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Coin Type"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <Spinner
                android:id="@+id/coinSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:tooltipText="Select"
                android:entries="@array/context_view"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/spinnerLayout"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Date"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>
            <ImageButton
                android:id="@+id/dateImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="#00000000"
                android:src="@drawable/ic_date_range"/>
            <TextView
                android:id="@+id/dateTxtView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1.6"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/volumeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/dateLayout"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Volume"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <EditText
                android:id="@+id/volumeEtx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:layout_weight="2"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/priceUnitLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/volumeLayout"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Price Unit"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <EditText
                android:id="@+id/priceUnitEtx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:layout_weight="2"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/priceUnitLayout"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Price"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <TextView
                android:id="@+id/priceEtx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="numberDecimal"
                android:layout_weight="2"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feesLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/priceLayout"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:text="Fees"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <EditText
                android:id="@+id/feesEtx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:layout_weight="2"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/totalLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:layout_below="@+id/feesLayout"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:focusable="true"
                android:textIsSelectable="true"
                android:layout_weight="0.8"
                android:text="Total"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text=":"/>

            <TextView
                android:id="@+id/totalTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="2"
                android:text="0.00"/>
        </LinearLayout>

        <Button
            android:id="@+id/transaction_save"
            android:layout_width="@dimen/save_button_width"
            android:layout_height="@dimen/save_button_height"
            android:layout_marginTop="@dimen/save_button_topMargin"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:layout_below="@+id/totalLayout"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
